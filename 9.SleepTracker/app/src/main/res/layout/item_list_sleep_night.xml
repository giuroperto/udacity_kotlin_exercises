<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="sleep"
            type="com.example.android.trackmysleepquality.database.SleepNight" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_quality"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            tools:srcCompat="@drawable/ic_sleep_5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginVertical="8dp"
            android:layout_marginStart="16dp"
            app:sleepImage="@{sleep}" />

        <!--    android:layout_width="@dimen/icon_size"-->

        <TextView
            android:id="@+id/txt_length"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            tools:text="Wednesday"
            app:layout_constraintTop_toTopOf="@id/img_quality"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/img_quality"
            app:sleepDurationFormatted="@{sleep}" />

        <TextView
            android:id="@+id/txt_quality"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/txt_length"
            app:layout_constraintEnd_toEndOf="@id/txt_length"
            app:layout_constraintStart_toStartOf="@id/txt_length"
            tools:text="Excellent!!!"
            app:sleepQualityString="@{sleep}" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>